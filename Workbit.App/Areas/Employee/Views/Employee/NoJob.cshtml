@{
	ViewData["Title"] = "No Job Assigned";
}

<style>
	.nojobs-wrapper {
		min-height: 70vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--background);
	}

	.nojobs-card {
		background: #fff;
		padding: 40px 36px 30px 36px;
		border-radius: 22px;
		box-shadow: 0 6px 28px rgba(8,131,149,0.11);
		text-align: center;
		max-width: 420px;
		border: 2px solid var(--secondary);
		margin: 0 auto;
	}

		.nojobs-card h2 {
			color: var(--primary);
			font-weight: 800;
			font-size: 2rem;
			margin-bottom: 14px;
			letter-spacing: 0.5px;
		}

		.nojobs-card p {
			color: var(--third);
			font-size: 1.13rem;
			margin-bottom: 0;
		}

	.nojobs-icon {
		font-size: 2.5rem;
		margin-bottom: 12px;
		color: var(--secondary);
	}
</style>

<div class="nojobs-wrapper">
	<div class="nojobs-card">
		<div class="nojobs-icon">
			<i class="fa-regular fa-face-frown"></i>
		</div>
		<h2>No Job Assigned</h2>
		<p>
			You currently do not have a job assigned.<br />
			Please contact your manager or administrator for further instructions.
		</p>
	</div>
</div>
