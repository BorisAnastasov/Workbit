@model IEnumerable<EmployeeSummaryDto>
@{
    ViewData["Title"] = "My Team";
}

<style>
    .team-wrapper {
        padding: 2.5rem 2rem;
        background-color: var(--background);
        min-height: calc(100vh - 120px);
        position: relative;
    }

        .team-wrapper h2 {
            text-align: center;
            color: var(--primary);
            margin-bottom: 2rem;
            font-weight: 800;
            font-size: 2rem;
        }

    .btn-add-employee {
        position: absolute;
        top: 2.5rem;
        right: 2rem;
        background-color: var(--secondary);
        color: #fff;
        font-weight: 700;
        padding: 0.6rem 1.4rem;
        border-radius: 30px;
        font-size: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        transition: background-color 0.3s ease, transform 0.2s ease;
        text-decoration: none;
    }

        .btn-add-employee:hover {
            background-color: var(--primary);
            transform: translateY(-2px);
            color: #fff;
        }

    .team-table {
        width: 100%;
        border-collapse: collapse;
        background: #fff;
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        margin: auto;
        font-size: 1rem;
    }

        .team-table th, .team-table td {
            padding: 0.8rem 1rem;
            text-align: left;
            vertical-align: middle;
        }

        .team-table th {
            background-color: var(--secondary);
            color: #fff;
            font-weight: 600;
            font-size: 1.1rem;
            cursor: pointer;
        }

        .team-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .team-table tr:hover {
            background-color: #eef8fa;
        }

    .action-btn {
        padding: 4px 10px;
        margin-right: 5px;
        font-size: 0.8rem;
        border-radius: 18px;
        font-weight: 600;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .action-btn:hover {
            transform: translateY(-2px);
        }

    .btn-view {
        background-color: var(--secondary);
        color: white;
    }

        .btn-view:hover {
            background-color: var(--primary);
            color: white;
        }

    .btn-edit {
        background-color: #ff9800; /* A vibrant orange */
        color: #fff;
    }

        .btn-edit:hover {
            background-color: #f57c00;
            color: #fff;
        }

    /* Make action buttons always in a row, nicely spaced */
    .action-btn-group {
        display: flex;
        flex-direction: row;
        gap: 10px;
        justify-content: center;
        align-items: center;
    }

    .btn-kick {
        background-color: #e63946;
        color: white;
    }

        .btn-kick:hover {
            background-color: #c1121f;
        }

    .alert {
        max-width: 600px;
        margin: 0 auto 15px auto;
        border-radius: 8px;
        text-align: center;
        font-weight: 600;
        font-size: 1rem;
        padding: 0.8rem;
    }

    .dataTables_length {
        margin-bottom: 1.2rem !important; /* Adds space below the dropdown */
    }

    .dataTables_filter {
        margin-bottom: 1.2rem !important;
    }
</style>

<div class="team-wrapper">
    <h2>My Team Members</h2>

    <!-- Add Employee Button -->
    <a asp-area="Manager" asp-controller="Employee" asp-action="Hire" class="btn-add-employee">
        + Add Employee
    </a>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (!Model.Any())
    {
        <p class="text-center" style="font-size:1.1rem; font-weight:500;">No employees found in your department.</p>
    }
    else
    {
        <table class="team-table display" id="teamTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th style="width: 160px; text-align: center;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td><strong>@employee.FullName</strong></td>
                        <td>
                            <div class="action-btn-group">
                                <a asp-area="Manager" asp-controller="Employee" asp-action="Details" asp-route-employeeId="@employee.Id"
                                   class="btn action-btn btn-view">
                                    View
                                </a>
                                <a asp-area="Manager" asp-controller="Employee" asp-action="Edit" asp-route-employeeId="@employee.Id"
                                   class="btn action-btn btn-edit">
                                    Edit
                                </a>
                                <form asp-area="Manager" asp-controller="Employee" asp-action="Fire" method="post" style="display:inline;">
                                    <input type="hidden" name="employeeId" value="@employee.Id" />
                                    <button type="submit" class="btn action-btn btn-kick"
                                            style="color:white;"
                                            onclick="return confirm('Are you sure you want to fire @employee.FullName?');">
                                        Fire
                                    </button>
                                </form>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            $('#teamTable').DataTable({
                pageLength: 10,
                order: [[0, "asc"]],
                columnDefs: [
                    { orderable: false, targets: 1 }
                ],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search employee..."
                }
                // searching: true // Default is true, so you can omit this line!
            });
        });
    </script>
}


