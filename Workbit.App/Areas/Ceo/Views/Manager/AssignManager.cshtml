@model AssignManagerViewModel
@{
    ViewData["Title"] = "Assign Manager";
}

<style>
    .assign-wrapper {
        max-width: 600px;
        margin: 50px auto;
        background: #fff;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.08);
        font-family: 'Nunito', sans-serif;
    }

    h2 {
        color: var(--primary);
        font-weight: 700;
        margin-bottom: 20px;
        text-align: center;
    }

    label {
        font-weight: 600;
    }

    .btn-submit {
        background-color: var(--secondary);
        color: #fff;
        font-weight: 600;
        border-radius: 50px;
        padding: 12px 25px;
        margin-top: 20px;
        display: block;
        width: 100%;
        transition: background-color 0.3s ease, transform 0.2s ease;
        border: none;
    }

        .btn-submit:hover {
            background-color: var(--primary);
            transform: translateY(-3px);
        }

    .alert {
        border-radius: 10px;
        padding: 12px 20px;
        margin-bottom: 20px;
        font-weight: 600;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
    }

    .text-danger {
        font-size: 0.9rem;
    }

    .back-btn {
        margin-top: 30px;
        display: inline-block;
        background-color: var(--secondary);
        color: #fff;
        padding: 12px 28px;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .back-btn:hover {
            background-color: var(--primary);
            transform: translateY(-2px);
            color: #fff;
        }
</style>

<div class="assign-wrapper">
    <h2>Assign Manager to @Model.DepartmentName</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <form method="post" asp-action="AssignManager">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="DepartmentId" />

        <div class="mb-3">
            <label asp-for="SelectedManagerId" class="form-label">Select Manager</label>
            <select asp-for="SelectedManagerId" class="form-select" required>
                <option value="">-- Choose Manager --</option>
                @foreach (var manager in Model.AvailableManagers)
                {
                    <option value="@manager.Id" selected="@(Model.SelectedManagerId == manager.Id)">
                        @manager.FullName
                    </option>
                }
            </select>
            <span asp-validation-for="SelectedManagerId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-submit">Assign Manager</button>
    </form>

    <div class="text-center">
        <a asp-area="Ceo" asp-controller="Department" asp-action="Details" asp-route-id="@Model.DepartmentId" class="back-btn">Back to Department</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
