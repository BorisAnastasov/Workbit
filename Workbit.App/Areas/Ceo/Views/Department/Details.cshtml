@model DepartmentReadDto
@{
    ViewData["Title"] = "Department Details";
}

<style>
    .department-details-wrapper {
        padding: 10px 20px;
        background-color: var(--background);
        min-height: calc(100vh - 120px);
        display: flex;
        justify-content: center;
        align-items: flex-start;
    }

    .department-card {
        margin-top: 20px;
        max-width: 1000px;
        width: 100%;
        background: #fff;
        padding: 20px 50px;
        border-radius: 24px;
        box-shadow: 0 12px 40px rgba(0,0,0,0.1);
        font-size: 1.2rem;
        position: relative;
    }

    .department-card h2 {
        text-align: center;
        color: var(--primary);
        font-size: 2.8rem;
        font-weight: 800;
        margin-bottom: 20px;
    }

    .button-row {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 30px;
    }

    .button-row .delete-btn,
    .button-row .assign-btn {
        padding: 10px 18px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 25px;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .button-row .delete-btn {
        background-color: #e63946;
        color: #fff;
        border: none;
    }

    .button-row .delete-btn:hover {
        background-color: #c1121f;
        transform: translateY(-3px);
    }

    .button-row .assign-btn {
        background-color: var(--secondary);
        color: #fff;
    }

    .button-row .assign-btn:hover {
        background-color: var(--primary);
        transform: translateY(-3px);
    }

    .department-description {
        text-align: center;
        color: #666;
        font-size: 1.3rem;
        margin-bottom: 40px;
    }

    .details-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }
    .details-table th,
    .details-table td {
        padding: 16px 12px;
        border-bottom: 1px solid #e0e0e0;
    }
    .details-table th {
        text-align: left;
        color: var(--secondary);
        font-weight: 700;
        font-size: 1.4rem;
        width: 30%;
    }

    .info-pill {
        display: inline-block;
        background-color: var(--background);
        color: var(--primary);
        border: 2px solid var(--secondary);
        padding: 10px 18px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1.05rem;
        margin: 6px 8px 6px 0;
        transition: all 0.3s ease;
    }

    .info-pill:hover {
        background-color: var(--secondary);
        color: #fff;
        border-color: var(--secondary);
        transform: translateY(-2px);
    }

    .action-btn {
        display: inline-block;
        margin-left: 10px;
        padding: 8px 14px;
        font-size: 0.9rem;
        font-weight: 600;
        color: #fff;
        border-radius: 20px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-view {
        background-color: var(--secondary);
    }

    .btn-view:hover {
        background-color: var(--primary);
        color: #fff !important;
    }

    .btn-remove {
        background-color: #e63946;
    }

    .btn-remove:hover {
        background-color: #c1121f;
        transform: translateY(-2px);
    }

    .back-btn {
        margin-top: 30px;
        display: inline-block;
        background-color: var(--secondary);
        color: #fff;
        padding: 12px 28px;
        border-radius: 50px;
        font-size: 1.2rem;
        font-weight: 600;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .back-btn:hover {
        background-color: var(--primary);
        transform: translateY(-2px);
            color: #fff;
    }

    @@media (max-width: 768px) {
        .department-card { padding: 40px 20px; }
        .button-row { flex-direction: column; gap: 10px; }
    }
</style>

<div class="department-details-wrapper">
    <div class="department-card">
        <h2>@Model.Name</h2>

        <div class="button-row">
            <form asp-area="Ceo"
                  asp-controller="Department"
                  asp-action="Delete"
                  asp-route-id="@Model.Id"
                  method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="delete-btn"
                        onclick="return confirm('Are you sure you want to delete this department? This action cannot be undone.');">
                    Delete Department
                </button>
            </form>

            <a asp-area="Ceo"
               asp-controller="Manager"
               asp-action="AssignManager"
               asp-route-departmentId="@Model.Id"
               class="assign-btn">
                + Assign Manager
            </a>
        </div>

        <p class="department-description">@Model.Description</p>

        <table class="details-table">
            <tr>
                <th>Managers</th>
                <td>
                    @if (Model.Managers?.Any() == true)
                    {
                        @foreach (var manager in Model.Managers)
                        {
                            <div style="margin-bottom: 12px;">
                                <span class="info-pill">@manager.FullName</span>
                                <a asp-area="Ceo" asp-controller="Manager" asp-action="Details" asp-route-id="@manager.Id" class="action-btn btn-view">View</a>
                                <form asp-controller="Manager" asp-action="RemoveManager" method="post" style="display:inline;">
                                    <input type="hidden" name="managerId" value="@manager.Id" />
                                    <input type="hidden" name="departmentId" value="@Model.Id" />
                                    <button type="submit" class="action-btn btn-remove" onclick="return confirm('Remove this manager?');">Remove</button>
                                </form>
                            </div>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No managers assigned</span>
                    }
                </td>
            </tr>
            <tr>
                <th>Jobs</th>
                <td>
                    @if (Model.Jobs?.Any() == true)
                    {
                        @foreach (var job in Model.Jobs)
                        {
                            <div style="margin-bottom: 10px;">
                                <span class="info-pill">@job.Title</span>
                                <a asp-area="Ceo" asp-controller="Job" asp-action="Details" asp-route-id="@job.Id" class="action-btn btn-view">View Job</a>
                            </div>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No jobs in this department</span>
                    }
                </td>
            </tr>
        </table>

        <div class="text-center">
            <a asp-area="Ceo" asp-controller="Department" asp-action="All" class="back-btn">Back to Departments</a>
        </div>
    </div>
</div>
