@model DepartmentCreateFormModel
@{
    ViewData["Title"] = "Create Department";
}

<style>
    .create-department-wrapper {
        padding: 60px 20px;
        background-color: var(--background);
        min-height: calc(100vh - 120px);
        display: flex;
        justify-content: center;
        align-items: flex-start;
    }

    .create-card {
        background: #fff;
        padding: 40px 30px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        width: 100%;
        max-width: 600px;
    }

        .create-card h2 {
            color: var(--primary);
            font-weight: 800;
            font-size: 2rem;
            text-align: center;
            margin-bottom: 25px;
        }

    .form-label {
        font-weight: 600;
        color: var(--text-dark);
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 10px 15px;
        font-size: 1rem;
    }

    .btn-submit {
        background-color: var(--secondary);
        color: #fff;
        font-weight: 600;
        border-radius: 50px;
        padding: 12px 25px;
        transition: background-color 0.3s ease, transform 0.2s ease;
        width: 100%;
        font-size: 1.1rem;
    }

        .btn-submit:hover {
            background-color: var(--primary);
            transform: translateY(-2px);
            color: #fff;
        }

    .alert {
        border-radius: 12px;
        padding: 1rem 1.5rem;
        margin-bottom: 1.5rem;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
    }
</style>

<div class="create-department-wrapper">
    <div class="create-card">
        <h2>Create Department</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <form asp-area="Ceo" asp-controller="Department" asp-action="Create" method="post">
            <input type="hidden" asp-for="CompanyId" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Department Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter department name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" placeholder="Describe this department"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">Create Department</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
