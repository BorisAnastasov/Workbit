@model IEnumerable<JobSummaryDto>
@{
    ViewData["Title"] = "Department Jobs";
}

<style>
    .jobs-wrapper {
        padding: 2.5rem 2rem;
        background-color: var(--background);
        min-height: calc(100vh - 120px);
    }

    .header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

        .header-row h2 {
            color: var(--primary);
            font-weight: 800;
            font-size: 2rem;
            margin: 0;
        }

    /* Create Job button */
    .create-btn {
        background-color: var(--secondary);
        color: #fff;
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 25px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .create-btn:hover {
            background-color: var(--primary);
            transform: translateY(-2px);
            color: #fff;
        }

    .jobs-table {
        width: 100%;
        border-collapse: collapse;
        background: #fff;
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        margin: auto;
        font-size: 1rem;
    }

        .jobs-table th, .jobs-table td {
            padding: 0.8rem 1rem;
            text-align: left;
            vertical-align: middle;
        }

        .jobs-table th {
            background-color: var(--secondary);
            color: #fff;
            font-weight: 600;
            font-size: 1.1rem;
        }

        .jobs-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .jobs-table tr:hover {
            background-color: #eef8fa;
        }

    /* Button group container */
    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 8px;
    }

    /* Compact buttons with consistent size */
    .action-btn {
        padding: 6px 14px;
        font-size: 0.85rem;
        border-radius: 20px;
        font-weight: 600;
        text-align: center;
        transition: background-color 0.3s ease, transform 0.2s ease;
        min-width: 70px;
    }

        .action-btn:hover {
            transform: translateY(-2px);
        }

    /* Button colors */
    .btn-view {
        background-color: var(--secondary);
        color: white;
    }

        .btn-view:hover {
            background-color: var(--primary);
            color: white;
        }

    .btn-edit {
        background-color: #f4a261;
        color: white;
    }

        .btn-edit:hover {
            background-color: #e76f51;
        }

    .btn-delete {
        background-color: #e63946;
        color: white;
    }

        .btn-delete:hover {
            background-color: #c1121f;
        }
</style>

<div class="jobs-wrapper">
    <div class="header-row">
        <h2>Department Jobs</h2>
        <!-- Create Job Button -->
        <a asp-controller="Job" asp-action="CreateJob" class="create-btn">+ Create Job</a>
    </div>

    @if (!Model.Any())
    {
        <p class="text-center" style="font-size:1.1rem; font-weight:500;">No jobs found in your department.</p>
    }
    else
    {
        <table class="jobs-table">
            <thead>
                <tr>
                    <th>Job Title</th>
                    <th style="width: 240px; text-align: center;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var job in Model)
                {
                    <tr>
                        <td>@job.Title</td>
                        <td>
                            <div class="action-buttons">
                                <!-- View Job Details -->
                                <a asp-controller="Job" asp-action="JobDetailsForManager" asp-route-id="@job.Id"
                                   class="btn action-btn btn-view">View</a>

                                <!-- Edit Job -->
                                <a asp-controller="Job" asp-action="EditJob" asp-route-id="@job.Id"
                                   class="btn action-btn btn-edit">Edit</a>

                                <!-- Delete Job -->
                                <form asp-controller="Job" asp-action="Delete" asp-route-id="@job.Id"
                                      method="post" style="display:inline;">
                                    <button type="submit" class="btn action-btn btn-delete"
                                            onclick="return confirm('Are you sure you want to delete this job? This action cannot be undone.');">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
