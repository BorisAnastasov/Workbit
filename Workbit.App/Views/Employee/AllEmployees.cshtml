@model IEnumerable<EmployeeSummaryDto>
@{
    ViewData["Title"] = "All Employees";
}

<style>
    .employees-wrapper {
        padding: 50px 20px;
        background-color: var(--background);
        min-height: calc(100vh - 120px); /* Prevent footer overlap */
    }

    .employees-title {
        color: var(--primary);
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 40px;
    }

    .employees-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .employee-card {
        background: #fff;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .employee-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.12);
        }

        .employee-card i {
            font-size: 2.5rem;
            color: var(--secondary);
            margin-bottom: 15px;
        }

        .employee-card h3 {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--primary);
            margin-bottom: 10px;
        }

        .employee-card a {
            display: inline-block;
            margin-top: 10px;
            color: #fff;
            background-color: var(--secondary);
            border-radius: 30px;
            padding: 8px 18px;
            font-weight: 600;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .employee-card a:hover {
                background-color: var(--primary);
                transform: translateY(-2px);
                text-decoration: none;
                color: #fff;
            }
</style>

<div class="employees-wrapper">
    <h2 class="employees-title">All Employees</h2>

    <div class="employees-grid">
        @foreach (var emp in Model)
        {
            <div class="employee-card">
                <i class="fa-solid fa-user"></i>
                <h3>@emp.FullName</h3>
                <a asp-controller="Employee" asp-action="EmployeeDetails" asp-route-id="@emp.Id">
                    View Details
                </a>
            </div>
        }
    </div>
</div>
