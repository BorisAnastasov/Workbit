<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Workbit HCM</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Workbit.App.styles.css" asp-append-version="true" />
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
	<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">

	<style>
		:root {
			--primary: #088395;
			--secondary: #37B7C3;
			--third: #071952;
			--background: #EBF4F6;
			--text-dark: #212121;
			--success: #4CAF50; 
			--warning: #FFC107;
		}

		body {
			font-family: 'Nunito', sans-serif;
		}

		html, body {
			height: 100%;
			margin: 0;
			display: flex;
			flex-direction: column;
		}

		body {
			background-color: var(--background);
			color: var(--text-dark);
		}

		main {
			flex: 1;
		}

		/* Navbar */
		.navbar {
			background-color: var(--third) !important;
			font-size: 20px;
		}

		.navbar-logo {
			height: 6vh;
			width: auto;
			max-height: 100%;
			margin: 0.25rem 1rem;
		}

		.navbar-nav .nav-link {
			color: white !important;
			font-weight: 600;
			padding: 0.6rem 1.5rem; /* More space around links */
			margin: 0 0.3rem;
			border-radius: 30px;
			transition: background-color 0.3s ease, transform 0.2s ease, border-color 0.3s ease;
			border: 2px solid transparent; /* Default no border */
		}

			.navbar-nav .nav-link:hover {
				background-color: var(--secondary);
				color: #fff !important;
				transform: translateY(-2px);
			}

			/* Highlight active link */
			.navbar-nav .nav-link.active {
				background-color: var(--primary);
				color: #fff !important;
				font-weight: 700;
				border: 2px solid var(--secondary); /* Border for active page */
			}

		.navbar .btn.btn-light {
			background-color: white;
			color: var(--primary);
			font-size: 20px;
			font-weight: 600;
			border-radius: 10px;
			transition: background-color 0.3s ease, color 0.3s ease;
		}

			.navbar .btn.btn-light:hover {
				background-color: var(--secondary);
				color: white;
			}

		.navbar .btn.btn-outline-light {
			font-size: 20px;
			font-weight: 600;
			border-radius: 10px;
		}

		/* Footer */
		footer {
			background-color: var(--primary);
			color: white;
			padding: 1rem;
			text-align: center;
			position: fixed;
			left: 0;
			bottom: 0;
			width: 100%;
		}

			footer a {
				color: var(--secondary);
			}

				footer a:hover {
					text-decoration: underline;
				}
	</style>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow">
			<div class="container-fluid">
				<a class="navbar-brand d-flex align-items-center logo-with-outline" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="~/images/Workbit-logo.png" alt="Workbit HCM" class="navbar-logo me-2">
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link @Html.IsActive("Index", "Home")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link @Html.IsActive("Privacy", "Home")" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>

						@if (User.IsCeo())
						{
							<li class="nav-item">
								<a class="nav-link @Html.IsActive("Profile", "Ceo")" asp-area="Ceo" asp-controller="Ceo" asp-action="Peofile">Dashboard</a>
							</li>
							<li class="nav-item">
								<a class="nav-link @Html.IsActive("All", "Department")" asp-area="Ceo" asp-controller="Department" asp-action="All">Departments</a>
							</li>
							<li class="nav-item">
								<a class="nav-link @Html.IsActive("AttendanceLog", "Attendance")" asp-area="Ceo" asp-controller="Attendance" asp-action="AttendanceLog">Attendance</a>
							</li>
							<li class="nav-item">
								<a class="nav-link @Html.IsActive("Dashboard", "Payment")" asp-area="Ceo" asp-controller="Payment" asp-action="Dashboard">Payment</a>
							</li>
						}
						@if (User.IsManager())
						{
							<li class="nav-item">
								<a class="nav-link @Html.IsActive("Profile", "Manager")" asp-area="Manager" asp-controller="Manager" asp-action="Profile">Profile</a>
							</li>
							<li class="nav-item">
								<a class="nav-link @Html.IsActive("Team", "Employee")" asp-area="Manager" asp-controller="Employee" asp-action="Team">Team</a>
							</li>
							<li class="nav-item">
								<a class="nav-link @Html.IsActive("All", "Job")" asp-area="Manager" asp-controller="Job" asp-action="All">Jobs</a>
							</li>
							<li class="nav-item">
								<a class="nav-link @Html.IsActive("Dashboard", "Payment")" asp-area="Manager" asp-controller="Payment" asp-action="Dashboard">Payment</a>
							</li>	
						}
						@if(User.IsEmployee())
						{
							<li class="nav-item">
								<a class="nav-link @Html.IsActive("Profile", "Employee")" asp-area="Employee" asp-controller="Employee" asp-action="Profile">Profile</a>
							</li>
							<li class="nav-item">
								<a class="nav-link @Html.IsActive("History", "Payment")" asp-area="Employee" asp-controller="Payment" asp-action="History">Payments</a>
							</li>
						}
						@if (User.IsAdmin())
						{
							<li class="nav-item">
								<a class="nav-link @Html.IsActive("AllUsers", "Admin")" asp-area="Admin" asp-controller="Admin" asp-action="AllUsers">Users</a>
							</li>
						}
					</ul>
					<div class="d-flex">
						@if (User.IsUser())
						{
							<a class="btn btn-light me-2 d-flex align-items-center justify-content-center " onclick="return confirm('Are you sure you want to log out?');"
														asp-area=""	asp-controller="User" asp-action="Logout">Logout</a>
						}
						else
						{
							<a class="btn btn-light me-2 d-flex align-items-center justify-content-center" asp-controller="User" asp-action="Login">Login</a>
							<a class="btn btn-outline-light" asp-area="" asp-controller="User" asp-action="Register">Sign Up</a>
						}
					</div>
				</div>
			</div>
		</nav>
	</header>

	<div class="container-fluid p-0">
		<main role="main">
			@RenderBody()
		</main>
	</div>

	<footer>
		<div class="container">
			&copy; @DateTime.Now.Year - Workbit - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
