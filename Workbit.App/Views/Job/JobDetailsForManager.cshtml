@model JobReadDto
@{
    ViewData["Title"] = "Job Details";
}

<style>
    .job-details-wrapper {
        padding: 60px 20px;
        background-color: var(--background);
        min-height: calc(100vh - 120px); /* Prevent footer overlap */
        display: flex;
        justify-content: center;
        align-items: flex-start;
    }

    .job-card {
        max-width: 800px;
        width: 100%;
        background: #fff;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.1);
        color: var(--text-dark);
    }

        .job-card h2 {
            font-size: 2.5rem;
            color: var(--primary);
            font-weight: 700;
            text-align: center;
            margin-bottom: 25px;
        }

    .job-info {
        margin-bottom: 30px;
    }

        .job-info p {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }

            .job-info p span {
                font-weight: 700;
                color: var(--secondary);
            }

    /* Employee list */
    .employee-list {
        margin-top: 25px;
        padding: 20px;
        background-color: var(--background);
        border-radius: 12px;
        box-shadow: inset 0 2px 5px rgba(0,0,0,0.05);
    }

        .employee-list h4 {
            color: var(--primary);
            font-weight: 600;
            margin-bottom: 15px;
        }

        .employee-list ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .employee-list li {
            font-size: 1.1rem;
            padding: 5px 0;
            color: var(--text-dark);
        }

    /* Back Button */
    .back-btn {
        display: inline-block;
        margin-top: 30px;
        padding: 10px 25px;
        background-color: var(--secondary);
        color: white;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .back-btn:hover {
            background-color: var(--primary);
            transform: translateY(-3px);
            color: white;
        }
</style>

<div class="job-details-wrapper">
    <div class="job-card">
        <h2>@Model.Title</h2>

        <div class="job-info">
            <p><span>Description:</span> @Model.Description</p>
            <p><span>Department:</span> @Model.DepartmentName</p>
            <p><span>Base Salary:</span> $@Model.BaseSalary.ToString("N2")</p>
        </div>

        @if (Model.EmployeeNames != null && Model.EmployeeNames.Any())
        {
            <div class="employee-list">
                <h4>Employees in this Job</h4>
                <ul>
                    @foreach (var employee in Model.EmployeeNames)
                    {
                        <li>@employee</li>
                    }
                </ul>
            </div>
        }
        else
        {
            <p><em>No employees are currently assigned to this job.</em></p>
        }

        <a asp-controller="Manager" asp-action="DepartmentJobs"class="back-btn">
            ← Back to Jobs of the Department
        </a>
    </div>
</div>
