@model IEnumerable<DepartmentSummaryDto>
@{
    ViewData["Title"] = "All Departments";
}

<style>
    .departments-wrapper {
        padding: 50px 20px;
        background-color: var(--background);
        min-height: calc(100vh - 120px);
    }

    .departments-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
    }

    .departments-title {
        color: var(--primary);
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
    }

    .create-btn {
        background-color: var(--secondary);
        color: #fff;
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 30px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

        .create-btn:hover {
            background-color: var(--primary);
            color: #fff;
            transform: translateY(-3px);
            text-decoration: none;
        }

    .departments-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .department-card {
        background: #fff;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .department-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.12);
        }

        .department-card i {
            font-size: 2.5rem;
            color: var(--secondary);
            margin-bottom: 15px;
        }

        .department-card h3 {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--primary);
            margin-bottom: 10px;
        }

        .department-card a {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 20px;
            background-color: var(--secondary);
            color: white;
            border: none;
            border-radius: 30px;
            font-size: 1rem;
            font-weight: 600;
            transition: background-color 0.3s ease, transform 0.2s ease;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            text-decoration: none; /* No underline by default */
        }

            .department-card a:hover {
                background-color: var(--primary);
                color: white;
                transform: translateY(-3px);
                text-decoration: none; /* Prevent underline on hover */
            }
</style>

<div class="departments-wrapper">
    <div class="departments-header">
        <h2 class="departments-title">Company Departments</h2>
        <a asp-controller="Department" asp-action="CreateDepartment" class="create-btn">+ Create Department</a>
    </div>

    <div class="departments-grid">
        @foreach (var dept in Model)
        {
            <div class="department-card">
                <i class="fa-solid fa-building"></i>
                <h3>@dept.Name</h3>
                <a asp-controller="Department" asp-action="DepartmentDetails" asp-route-id="@dept.Id">
                    View Details
                </a>
            </div>
        }
    </div>
</div>
